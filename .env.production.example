# n8n DFY Autopilot - Production Environment Configuration
# Copy this file to .env and configure with your production values

# === APPLICATION CONFIG ===
NODE_ENV=production
PORT=8080
APP_NAME=n8n-dfy-autopilot

# === DATABASE CONFIG ===
# Fly.io PostgreSQL connection string
DATABASE_URL=postgresql://username:password@hostname:5432/database_name

# === REDIS CONFIG ===
# Fly.io Redis connection details
REDIS_URL=redis://username:password@hostname:6379
REDIS_HOST=your-redis-host.flycast
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# === CLAUDE AI CONFIG ===
ANTHROPIC_API_KEY=your-claude-api-key
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# === YOUTUBE API CONFIG ===
YOUTUBE_API_KEY=your-youtube-api-key
YOUTUBE_CLIENT_ID=your-youtube-client-id
YOUTUBE_CLIENT_SECRET=your-youtube-client-secret
YOUTUBE_REFRESH_TOKEN=your-youtube-refresh-token
YOUTUBE_REDIRECT_URI=https://n8n-autopilot.com/auth/youtube/callback

# === N8N API CONFIG ===
N8N_API_KEY=your-n8n-api-key
N8N_BASE_URL=https://your-n8n-instance.com
N8N_USERNAME=your-n8n-username
N8N_PASSWORD=your-n8n-password

# === EMAIL CONFIG ===
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@n8n-autopilot.com
FROM_NAME=n8n DFY Autopilot

# === FILE STORAGE CONFIG ===
UPLOAD_PATH=/app/uploads
TEMP_PATH=/app/temp
MAX_FILE_SIZE=100000000
ALLOWED_FILE_TYPES=mp4,avi,mov,mkv,pdf,json

# === SECURITY CONFIG ===
JWT_SECRET=your-super-secure-jwt-secret-key
API_RATE_LIMIT=100
SESSION_SECRET=your-session-secret-key
CORS_ORIGIN=https://n8n-autopilot.com

# === ANALYTICS CONFIG ===
ANALYTICS_ENABLED=true
ANALYTICS_RETENTION_DAYS=365
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# === CONTENT CREATION CONFIG ===
CONTENT_GENERATION_ENABLED=true
VIDEO_QUALITY=1080p
AUDIO_QUALITY=high
SUPPORTED_LANGUAGES=en,es,fr,de
DEFAULT_LANGUAGE=en

# === WORKFLOW CONFIG ===
MAX_CONCURRENT_WORKFLOWS=5
MAX_TEST_ATTEMPTS=3
WORKFLOW_TIMEOUT=300000
BASE_WORKFLOW_PRICE=50
PRICING_PER_NODE_SIMPLE=5
PRICING_PER_NODE_MEDIUM=10
PRICING_PER_NODE_COMPLEX=20

# === MONITORING CONFIG ===
LOG_LEVEL=info
ENABLE_METRICS=true
HEALTH_CHECK_INTERVAL=30000
PERFORMANCE_MONITORING=true

# === PAYMENT CONFIG (Optional) ===
STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-key
STRIPE_SECRET_KEY=sk_live_your-stripe-secret
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# === EXTERNAL SERVICES ===
ELEVENLABS_API_KEY=your-elevenlabs-key
OPENAI_API_KEY=your-openai-key

# === FEATURE FLAGS ===
ENABLE_YOUTUBE_PUBLISHING=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_ANALYTICS_TRACKING=true
ENABLE_PAYMENT_PROCESSING=false
ENABLE_REAL_TIME_UPDATES=true

# === DEPLOYMENT CONFIG ===
FLY_APP_NAME=n8n-dfy-autopilot
FLY_REGION=ord
DOMAIN_NAME=n8n-autopilot.com